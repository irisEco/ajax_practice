<div class="page-header">
  <h1>
    类别
    <small>
      <i class="ace-icon fa fa-angle-double-right"></i>
      Large &amp; Small
    </small>
  </h1>
</div><!-- /.page-header -->

<div class="row">
  <div class="col-xs-12">
    <!-- PAGE CONTENT BEGINS -->
    <div class="row">
      <% @categories.each_with_index do |c, index| %>
        <div class="col-xs-6 col-sm-3 pricing-box">
          <% color_class = ["orange", "blue", "green", "dark"] %>
          <div class="widget-box widget-color-<%= color_class[index] ? color_class[index] : color_class.sample %>">
            <div class="widget-header">
              <h5 class="widget-title bigger lighter"><%= c.title %></h5>
            </div>

            <div class="widget-body">
              <div class="widget-main">
                <ul class="list-unstyled spaced2">
                  <li>
                    <i class="ace-icon fa fa-check green"></i>
                    <%= c.description %>
                  </li>
                </ul>

                <hr/>
                <div class="price">
                  更多
                  <small>......</small>
                </div>
              </div>

              <div>
                <% btn_class = ["warning", "primary", "success", "inverse"] %>
                <a href="/admin/categories/<%= c.id %>" class="btn btn-block btn-<%= btn_class[index] ? btn_class[index] : btn_class.sample %>">
                  <i class="ace-icon fa fa-eye bigger-110"></i>
                  <span>探索</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div><!-- /.col -->
</div><!-- /.row -->
<hr>
<div>
  <%= link_to '新建', new_admin_category_path, class: "btn btn-xlg pull-right" %>
</div><!-- /.page-content -->
</div>

