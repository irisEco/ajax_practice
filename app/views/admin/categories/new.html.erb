<div class="row" style="margin-top: 10%">
  <div class="col-lg-8 col-lg-offset-3">
    <%= form_for @categories, url: {action: "create"}, class: "form-horizontal", role: "form" do |f| %>
      <div class="form-group">
        <%= f.label "title", class: "col-sm-3 control-label no-padding-right", for: "form-field-1" %><br>
        <div class="row">
          <div class="col-sm-9">
            <%= f.text_field :title, id: "form-field-1", class: "col-xs-10 col-sm-5 col-lg-12", placeholder: "类型名" %>
          </div>
        </div>
      </div>
      <div class="space-4"></div>
      <div class="form-group">
        <%= f.label "description", class: "col-sm-3 control-label no-padding-right", for: "form-field-2" %><br>
        <div class="row">
          <div class="col-sm-9">
            <%= f.text_area :description, id: "form-field-2", class: "col-xs-10 col-sm-5 col-lg-12", placeholder: "简介" %>
          </div>
        </div>
      </div>
      <div class="space-4"></div>
      <div class="form-group">
        <div class="col-lg-9">
          <div class="clearfix form-actions">
            <div class="col-md-offset-4 col-md-5">
              <%= f.submit "submit", class: "btn btn-info" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>